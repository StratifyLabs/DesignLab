{
  "name": "lvgl",
  "type": "styles",
  "version": 0,
  "$variables": {
    "$transitionPeriodMilliseconds": 100,
    "$radiusCircle": "0x7fff",
    "$opacity20": 51,
    "$opacity40": 102,
    "$opacity50": 127,
    "$opaque": 255,
    "$opacityCover": 255,
    "$transitionPropertyList": {
      "name": "transition_property_list",
      "type": "transitionPropertyList",
      "properties": [
        "background_opacity",
        "background_color",
        "transform_width",
        "transform_height",
        "translate_y",
        "translate_x",
        "transform_zoom",
        "transform_angle",
        "color_filter_opacity",
        "color_filter_descriptor"
      ]
    },
    "$transitionNormal": {
      "name": "transition_normal",
      "type": "transitionDescriptor",
      "property_list": "transition_property_list",
      "path": "linear",
      "period": "$transitionPeriodMilliseconds",
      "delay": 0
    },
    "$transitionDelayed": {
      "name": "transition_delayed",
      "type": "transitionDescriptor",
      "property_list": "transition_property_list",
      "path": "linear",
      "period": "$transitionPeriodMilliseconds",
      "delay": 70
    },
    "$darkColorFilter": {
      "name": "&dark_filter",
      "type": "colorFilterDescriptor",
      "code": "LV_UNUSED(filter_descriptor);\n  return lv_color_darken(color, opacity);"
    },
    "$lightColorFilter": {
      "name": "&light_filter",
      "type": "colorFilterDescriptor",
      "code": "LV_UNUSED(filter_descriptor);\n  return lv_color_lighten(color, opacity);"
    },
    "$greyColorFilter": {
      "name": "&grey_filter",
      "type": "colorFilterDescriptor",
      "code": "LV_UNUSED(filter_descriptor);\n  return lv_color_mix(lv_palette_lighten(LV_PALETTE_GREY, 2), color, opacity);"
    }
  },
  "@styles": {
    "@h1": {
      "text_font": "$fontHeaderExtraLarge",
      "top_padding": "$sizePaddingMedium",
      "bottom_padding": "$sizePaddingSmall",
      "width": "LV_PCT(100)"
    },
    "@h2": {
      "text_font": "$fontHeaderLarge",
      "top_padding": "$sizePaddingMedium",
      "bottom_padding": "$sizePaddingSmall",
      "width": "LV_PCT(100)"
    },
    "@h3": {
      "text_font": "$fontHeaderMedium",
      "top_padding": "$sizePaddingMedium",
      "bottom_padding": "$sizePaddingSmall",
      "width": "LV_PCT(100)"
    },
    "@h4": {
      "text_font": "$fontHeaderSmall",
      "top_padding": "$sizePaddingSmall",
      "bottom_padding": "$sizePaddingSmall",
      "width": "LV_PCT(100)"
    },
    "@container": {
      "padding": "$sizePaddingMedium",
      "background_color": "$colorBackground",
      "border_width": 0,
      "text_color": "$colorForeground",
      "background_opacity": "$opacityCover"
    },
    "@naked": {
      "padding": 0,
      "background_color": "$colorBackground",
      "border_width": 0,
      "text_color": "$colorForeground"
    },
    "@row": {
      "column_padding": "$sizePaddingMedium"
    },
    "@col": {
      "row_padding": "$sizePaddingMedium"
    },
    "@primary": {
      "background_color": "$colorPrimary",
      "border_color": "$colorPrimary",
      "text_color": "$colorText"
    },
    "@secondary": {
      "background_color": "$colorSecondary",
      "text_color": "$colorText"
    },
    "@warning": {
      "background_color": "$colorWarning",
      "text_color": "$colorText"
    },
    "@info": {
      "background_color": "$colorInfo",
      "text_color": "$colorText"
    },
    "@danger": {
      "background_color": "$colorDanger",
      "text_color": "$colorText"
    },
    "@success": {
      "background_color": "$colorSuccess",
      "text_color": "$colorText"
    },
    "@outline_primary": {
      "background_color": "$colorBackground",
      "border_color": "$colorPrimary",
      "text_color": "$colorPrimary",
      "border_width": "$sizeBorderWidth"
    },
    "@outline_secondary": {
      "background_color": "$colorBackground",
      "border_color": "$colorSecondary",
      "text_color": "$colorSecondary",
      "border_width": "$sizeBorderWidth"
    },
    "@outline_warning": {
      "background_color": "$colorBackground",
      "border_color": "$colorWarning",
      "text_color": "$colorWarning",
      "border_width": "$sizeBorderWidth"
    },
    "@outline_info": {
      "background_color": "$colorBackground",
      "border_color": "$colorInfo",
      "text_color": "$colorInfo",
      "border_width": "$sizeBorderWidth"
    },
    "@outline_danger": {
      "background_color": "$colorBackground",
      "border_color": "$colorDanger",
      "text_color": "$colorDanger",
      "border_width": "$sizeBorderWidth"
    },
    "@outline_success": {
      "background_color": "$colorBackground",
      "border_color": "$colorSuccess",
      "text_color": "$colorSuccess",
      "border_width": "$sizeBorderWidth"
    },
    "@sm": {
      "text_font": "$fontBodySmall",
      "padding": "$sizePaddingSmall"
    },
    "@lg": {
      "text_font": "$fontBodyLarge",
      "padding": "$sizePaddingLarge"
    },
    "@pill": {
      "radius": "$radiusCircle"
    },
    "screen": {
      "background_opacity": "$opacityCover",
      "background_color": "$colorBackground",
      "text_color": "$colorText",
      "row_padding": "$sizePaddingSmall",
      "column_padding": "$sizePaddingSmall"
    },
    "scrollbar": {
      "background_color": "grey",
      "radius": "$radiusCircle",
      "right_padding": "$sizeScrollbarPadding",
      "top_padding": "$sizeScrollbarPadding",
      "width": "$sizeScrollbar",
      "height": "$sizeScrollbar",
      "background_opacity": "$opacity40",
      "transition": "$transitionNormal"
    },
    "scrollbar_scrolled": {
      "background_opacity": "$opacityCover"
    },
    "@card": {
      "radius": "$sizeCardBorderRadius",
      "background_opacity": "$opacityCover",
      "background_color": "$colorBackground",
      "border_color": "$colorGrey",
      "border_width": "$sizeBorderWidth",
      "text_color": "$colorForeground",
      "border_post": true,
      "padding": 0,
      "row_padding": "$sizePaddingMedium",
      "column_padding": "$sizePaddingMedium",
      "line_color": "$colorGrey",
      "line_width": 1,
      "height": "LV_SIZE_CONTENT",
      "width": "LV_SIZE_CONTENT"
    },
    "@card_header": {
      "padding": "$sizePaddingMedium",
      "background_color": "$colorGrey",
      "background_opacity": "$opacity20",
      "border_width": "$sizeBorderWidth",
      "border_side": "bottom",
      "border_color": "$colorGrey",
      "width": "LV_PCT(100)"
    },
    "@card_body": {
      "padding": "$sizePaddingMedium",
      "width": "LV_PCT(100)",
      "background_color": "$colorBackground",
      "background_opacity": "$opaque"
    },
    "@card_footer": {
      "padding": "$sizePaddingMedium",
      "background_color": "$colorGrey",
      "background_opacity": "$opacity20",
      "border_width": "$sizeBorderWidth",
      "border_side": "top",
      "border_color": "$colorGrey",
      "width": "LV_PCT(100)"
    },
    "button": {
      "radius": "$sizeButtonRadius",
      "background_opacity": "cover",
      "background_color": "$colorPrimary",
      "text_color": "$colorWhite",
      "horizontal_padding": "$sizePaddingButtonHorizontal",
      "vertical_padding": "$sizePaddingButtonVertical",
      "column_padding": 3,
      "row_padding": 3
    },
    "background_color_primary": {
      "background_color": "$colorPrimary"
    },
    "background_color_primary_muted": {},
    "background_color_secondary": {
      "background_color": "$colorSecondary"
    },
    "background_color_secondary_muted": {
      "background_color": "$colorSecondary",
      "text_color": "$colorSecondary",
      "opacity": "$opacity20"
    },
    "background_color_grey": {
      "background_color": "$colorGrey",
      "opacity": "$opaque",
      "text_color": "$colorText"
    },
    "background_color_white": {
      "background_color": "$colorWhite",
      "text_color": "$colorText"
    },
    "pressed": {
      "color_filter_descriptor": "$darkColorFilter",
      "color_filter_opacity": 35
    },
    "disabled": {
      "color_filter_descriptor": "$greyColorFilter",
      "color_filter_opacity": 35
    },
    "padding_zero": {
      "padding": 0
    },
    "padding_tiny": {
      "padding": "$sizePaddingTiny"
    },
    "padding_small": {
      "padding": "$sizePaddingSmall"
    },
    "padding_normal": {
      "padding": "$sizePaddingNormal"
    },
    "padding_gap": {},
    "line_space_large": {},
    "text_align_center": {
      "text_alignment": "center"
    },
    "outline_border_primary": {
      "outline_color": "$colorPrimary",
      "outline_width": "$sizeOutlineWidth",
      "outline_padding": "$sizeOutlineWidth",
      "outline_opacity": "$opacity50"
    },
    "outline_border_secondary": {
      "outline_color": "$colorSecondary",
      "outline_width": "$sizeOutlineWidth",
      "outline_padding": "$sizeOutlineWidth",
      "outline_opacity": "$opacity50"
    },
    "circle": {},
    "radius_none": {},
    "clip_corner": {
      "clip_corner": true
    },
    "grow": {
      "transform_width": "$sizeGrow",
      "transform_height": "$sizeGrow"
    },
    "shrink": {
      "transform_width": "$sizeShrink",
      "transform_height": "$sizeShrink"
    },
    "transition_delayed": {
      "transition": "$transitionDelayed"
    },
    "transition_normal": {
      "transition": "$transitionNormal"
    },
    "animation": {
      "animation_time": 200
    },
    "knob": {
      "background_color": "$colorPrimary",
      "background_opacity": "$opaque",
      "padding": 6,
      "radius": "$radiusCircle"
    },
    "indicator": {
    },
    "arc_indicator": {
      "arc_color": "$colorGrey",
      "arc_width": "$sizeArcWidth",
      "arc_rounded": true
    },
    "arc_indicator_primary": {
      "arc_color": "$colorPrimary"
    },
    "chart_series": {
      "line_width": 3,
      "radius": 3,
      "width": 8,
      "height": 8,
      "column_padding": 2
    },
    "chart_indicator": {
      "radius": "$radiusCircle",
      "width": 8,
      "height": 8,
      "background_color": "$colorPrimary",
      "background_opacity": "cover"
    },
    "chart_ticks": {},
    "chart_background": {
      "border_post": false,
      "column_padding": 10,
      "line_color": "grey"
    },
    "dropdown_list": {
      "maximum_height": "$sizeDropdownMax"
    },
    "checkbox_marker": {
      "padding": "$sizePaddingNormal",
      "border_width": "$sizeBorderWidth",
      "border_color": "$colorPrimary",
      "background_color": "$colorBackground",
      "background_opacity": "$opaque",
      "radius": "$sizeCheckboxRadius"
    },
    "checkbox_marker_checked": {
      "background_image_source": "LV_SYMBOL_OK",
      "text_color": "$colorWhite",
      "text_font": "$fontBodySmall"
    },
    "switch_knob": {
      "padding": "$sizePaddingSmall",
      "background_color": "$colorWhite"
    },
    "line": {
      "line_width": "$sizeLineWidth",
      "line_color": "$colorText"
    },
    "table_cell": {},
    "meter_marker": {},
    "meter_indicator": {},
    "calendar_background": {},
    "calendar_day": {},
    "colorwheel_main": {},
    "message_box_background": {},
    "message_box_button_background": {},
    "keyboard_button_background": {},
    "list_background": {},
    "list_button": {},
    "list_item_grow": {},
    "list_label": {},
    "tab_background_focus": {},
    "text_area_cursor": {},
    "text_area_placeholder": {},
    "tab_button": {},
    "led": {}
  }
}
